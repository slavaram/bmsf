List<Task> tasks = [SELECT Id, ActivityDateTime__c FROM Task WHERE Owner.Name LIKE '%Рамазан%'];
for (Task tas : tasks) {
	DateTime newTime = System.now();
	newTime = newTime.addMinutes(Integer.valueOf(Math.random()*100));
	tas.ActivityDateTime__c = newTime;
	tas.OwnerId = '0051100000144kpAAA';
	tas.Status = 'Новая';
}
update tasks;














